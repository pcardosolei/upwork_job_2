{
  "manifest_version": 2,

  "name": "Chrome Extension - Melvin Turner",
  "description": "Chrome Extension",
  "version": "1.0.0.0",
  "homepage_url": "https://google.com/",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://selling.autotrader.co.uk"],
      "js": ["script.js"]
    },
    {
      "matches": ["https://www.copart.co.uk/"],
      "js": ["script2.js"]
    }
  ]
}
